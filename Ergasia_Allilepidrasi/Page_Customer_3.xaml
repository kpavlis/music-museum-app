<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Ergasia_Allilepidrasi.Page_Customer_3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ergasia_Allilepidrasi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Αίθουσα Προβολών" FontSize="30" FontWeight="Bold" Margin="0, 8,0, 2" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="1" Text="Παρακολουθήστε μουσικό περιεχόμενο" FontWeight="SemiBold" FontSize="15" HorizontalAlignment="Center"/>

        <ScrollViewer Grid.Row="2" ZoomMode="Disabled" IsVerticalScrollChainingEnabled="True" HorizontalScrollMode="Enabled" VerticalScrollMode="Enabled" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="15" MinZoomFactor="1.0" MaxZoomFactor="3.0">
            <Border CornerRadius="7" Height="670" Width="1350">
                <StackPanel HorizontalAlignment="Center" Orientation="Vertical" Spacing="30" Height="670" Width="1350">
                    <StackPanel.Background>
                        <ImageBrush ImageSource="Assets/Cinema_Back_1_1.jpg"/>
                    </StackPanel.Background>

                    <WebView2 x:Name="MyWebView2" Source="https://upload.wikimedia.org/wikipedia/commons/thumb/3/3f/Fronalpstock_big.jpg/1599px-Fronalpstock_big.jpg" HorizontalAlignment="Center" VerticalAlignment="Center" MinHeight="200" MinWidth="200" Height="431" Width="818" Margin="0, 98, 0,0"/>


                    <StackPanel Orientation="Horizontal" Spacing="30" Margin="0, 50, 0, 0" HorizontalAlignment="Center" >
                        <Button CornerRadius="8" RequestedTheme="Dark" BorderThickness="1.5" BorderBrush="Gray" Width="130" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click">

                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <FontIcon Glyph="&#xF6FA;" FontSize="20"/>
                                <TextBlock Text="YouTube" FontSize="16" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                        <Button CornerRadius="8" RequestedTheme="Dark" BorderThickness="1.5" BorderBrush="Gray" Width="170" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click_1">

                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <FontIcon Glyph="&#xF6FA;" FontSize="20"/>
                                <TextBlock Text="Συνέντευξη 1" FontSize="16" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                        <Button CornerRadius="8" RequestedTheme="Dark" BorderThickness="1.5" BorderBrush="Gray" Width="170" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click_2">

                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <FontIcon Glyph="&#xF6FA;" FontSize="20"/>
                                <TextBlock Text="Συνέντευξη 2" FontSize="16" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>

</Page>
