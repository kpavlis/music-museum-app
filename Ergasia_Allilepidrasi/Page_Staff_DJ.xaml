<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Ergasia_Allilepidrasi.Page_Staff_DJ"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ergasia_Allilepidrasi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled">

    <Grid Margin="20, 15, 20, 15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>


        <Grid Grid.Column="0"  HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <ScrollViewer x:Name="receipt" Grid.Row="0"  ZoomMode="Disabled" IsVerticalScrollChainingEnabled="True" HorizontalScrollMode="Enabled" VerticalScrollMode="Enabled" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="Title" Grid.Row="0" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center">Τίτλος Τραγουδιού</TextBlock>
                    <TextBlock x:Name="Artist" Grid.Row="1" FontSize="22" HorizontalAlignment="Center">Όνομα Καλλιτέχνη</TextBlock>

                    <Border Grid.Row="2" x:Name="picture_1" CornerRadius="200"  Margin="0, 30, 0 ,0" Width="360" Height="360">
                        <Border.Background>
                            <ImageBrush  ImageSource="Assets/DJ.png"/>
                        </Border.Background>
                        <Border CornerRadius="100"  Margin="0, 10, 0 ,0" Width="200" Height="200" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image x:Name="Image" Source ="Assets/mihalis.png" DataContext="Hello" Width="200" Height="200" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Border>

                    <Border Grid.Row="2" Visibility="Collapsed" x:Name="picture_2" CornerRadius="200"  Margin="0, 30, 0 ,0" Width="360" Height="360">
                        <Border.Background>
                            <ImageBrush x:Name="sub_picture"  ImageSource="Assets/DJ_Blue.png"/>
                        </Border.Background>
                        <Border CornerRadius="100"  Margin="0, 10, 0 ,0" Width="200" Height="200" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image x:Name="Image2" Source ="Assets/mihalis.png" DataContext="Hello" Width="200" Height="200" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Border>


                </Grid>
            </ScrollViewer>


            <MediaPlayerElement Grid.Row="1" Visibility="Visible" IsEnabled="False"  x:Name="_mediaPlayerElement" AreTransportControlsEnabled="True" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Source="ms-appx:///Assets/Songs/song_1.mp3">
                <MediaPlayerElement.TransportControls>
                    <MediaTransportControls IsCompact="False" IsZoomButtonVisible="False" IsPlaybackRateButtonVisible="True" IsPlaybackRateEnabled="True" />
                </MediaPlayerElement.TransportControls>
            </MediaPlayerElement>

            <MediaPlayerElement Grid.Row="1" Visibility="Collapsed"  x:Name="_mediaPlayerElement2" AreTransportControlsEnabled="True" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Source="ms-appx:///Assets/Songs/song_2.mp3">
                <MediaPlayerElement.TransportControls>
                    <MediaTransportControls IsCompact="False" IsZoomButtonVisible="False" IsPlaybackRateButtonVisible="True" IsPlaybackRateEnabled="True" />
                </MediaPlayerElement.TransportControls>
            </MediaPlayerElement>





        </Grid>



        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>

            <Pivot Grid.Row="0"  Width="250" >
                <PivotItem >
                    <PivotItem.Header>
                        <TextBlock Text="Τραγούδια" FontSize="18"/>
                    </PivotItem.Header>

                    <Border HorizontalAlignment="Center" BorderBrush="#D4D4D4" BorderThickness="1" CornerRadius="10" Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"  Margin="0, 0, 0 , 10" Padding=" 10, 0 , 10, 0" >



                        <Grid  HorizontalAlignment="Center" x:Name="Placer">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" FontSize="18" HorizontalAlignment="Center" FontWeight="Medium" Padding="60, 0, 60, 0" Margin="0, 10, 0, 10" VerticalAlignment="Center">Τραγούδια</TextBlock>

                            <ListView Grid.Row="1" x:Name="BaseExample" ItemsSource="{x:Bind _songs}" HorizontalAlignment="Center" SelectionChanged="BaseExample_SelectionChanged" >

                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="local:Song" >
                                        <StackPanel Orientation="Horizontal" >

                                            <TextBlock FontSize="16" Width="170" Text="{x:Bind Title}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>

                            </ListView>

                        </Grid>
                    </Border>
                </PivotItem>
                <PivotItem>
                    <PivotItem.Header>
                        <TextBlock Text="Αιτήματα" FontSize="18"/>
                    </PivotItem.Header>
                    <Border HorizontalAlignment="Center" BorderBrush="#D4D4D4" BorderThickness="1" CornerRadius="10" Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"  Margin="0, 0, 0 , 10" Padding=" 10, 0 , 10, 0" >
                        <Grid  HorizontalAlignment="Center" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" FontSize="18" HorizontalAlignment="Center" FontWeight="Medium" Padding="60, 0, 60, 0" Margin="0, 10, 0, 10" VerticalAlignment="Center">Αιτήματα</TextBlock>
                            <ScrollViewer Grid.Row="1" ZoomMode="Disabled" IsVerticalScrollChainingEnabled="True" HorizontalScrollMode="Enabled" VerticalScrollMode="Enabled" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                <StackPanel Spacing="8" HorizontalAlignment="Center">
                                    <CheckBox Content="Αίτημα Κοινού 1"/>
                                    <CheckBox Content="Αίτημα Κοινού 2"/>
                                    <CheckBox Content="Αίτημα Κοινού 3"/>
                                    <CheckBox Content="Αίτημα Κοινού 4"/>
                                    <CheckBox Content="Αίτημα Κοινού 5"/>
                                    <CheckBox Content="Αίτημα Κοινού 6"/>

                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </PivotItem>
            </Pivot>

            <Image x:Name="photos" Grid.Row="1" HorizontalAlignment="Center" Source="/Assets/DJ.jpg" Height="90" Width="100"/>
            <TextBlock Grid.Row="2" FontSize="20" FontWeight="Medium" HorizontalAlignment="Center" Margin="0, 0, 0, 20" > Ρυθμίσεις</TextBlock>
            <ScrollViewer Grid.Row="3" 

   

HorizontalScrollMode="Enabled" HorizontalScrollBarVisibility="Auto"
VerticalScrollMode="Enabled" VerticalScrollBarVisibility="Auto">

                <StackPanel Spacing="15" HorizontalAlignment="Center">




                    <Button  HorizontalAlignment="Center" Click="Button_Click_6"  >
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <FontIcon Glyph="&#xE8B1;" FontSize="18"/>
                            <TextBlock Text="Τυχαία Αναπαραγωγή" FontSize="14"/>
                        </StackPanel>
                    </Button>



                    <DropDownButton Content="Είδος Μουσικής" FontSize="14" HorizontalAlignment="Center">
                        <DropDownButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem Text="Ποπ"/>
                                <MenuFlyoutItem Text="Παραδοσιακά"/>
                                <MenuFlyoutItem Text="Κλασικά"/>
                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>

                    <CheckBox Content="Μπλε Φωτισμός" Click="CheckBox_Click" HorizontalAlignment="Center" FontSize="14"/>

                    <CheckBox Content="Ηχητικά Εφέ" HorizontalAlignment="Center" FontSize="14"/>

                    <Button HorizontalAlignment="Center" Click="Button_Click_1">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <FontIcon Glyph="&#xE793;" FontSize="18"/>
                            <TextBlock Text="Φωτεινό/Σκοτεινό θέμα" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <Button HorizontalAlignment="Center" Click="TestButtonClick2">
                        <StackPanel Spacing="10">
                            <FontIcon Glyph="&#xE896;" FontSize="25"/>
                            <TextBlock Text="Δημιουργία&#10;Αντιγράφου Ασφαλείας" FontSize="14" TextWrapping="WrapWholeWords" Width="150" TextAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <TeachingTip x:Name="ToggleThemeTeachingTip2"
                    Title="Αντίγραφα Ασφαλείας"
                    Subtitle="Το αντίγραφο ασφαλείας έχει κατέβει στον υπολογιστή σας."
                    PreferredPlacement="Auto"
                    PlacementMargin="20"
                    IsLightDismissEnabled="True"
                    
                    CloseButtonContent="ΟΚ">
                    </TeachingTip>





                </StackPanel>
            </ScrollViewer>




        </Grid>



    </Grid>
</Page>
