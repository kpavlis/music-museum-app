<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Ergasia_Allilepidrasi.Page_Customer_2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ergasia_Allilepidrasi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Αίθουσα Συναυλιών" FontSize="30" FontWeight="Bold" Margin="0, 8,0, 2" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="1" Text="Κρατήστε θέση για τις διαθέσιμες συναυλίες" FontWeight="SemiBold" FontSize="15" HorizontalAlignment="Center"/>

        <ScrollViewer Grid.Row="2"  ZoomMode="Disabled" IsVerticalScrollChainingEnabled="True" HorizontalScrollMode="Enabled" VerticalScrollMode="Enabled" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="15">
            <Border CornerRadius="7" Height="670" Width="1350" VerticalAlignment="Center">
                <StackPanel VerticalAlignment="Center" Height="670" Width="1350" >
                    <StackPanel.Background>
                        <ImageBrush ImageSource="/Assets/stage-light-with-red-background.jpg"/>
                    </StackPanel.Background>

                    <Grid >



                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>


                        <Grid x:Name="Control1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">



                            <Border BorderBrush="Black" CornerRadius="5" BorderThickness="4"  Grid.Row="1" Height="500" Width="650" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 100, 0, 0" >
                                <Image Source="/Assets/Seats.png" Height="650" Width="650" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>


                        </Grid>




                        <Border x:Name="FormBorder" Grid.Column="1" Background="{ThemeResource AcrylicBackgroundFillColorBaseBrush}" Margin="0,100,30,0" CornerRadius="12" Width="350" Height="500"  VerticalAlignment="Top">



                            <Grid x:Name="Control2" HorizontalAlignment="Center" VerticalAlignment="Center" >

                                <Grid.RowDefinitions>

                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>


                                <RadioButtons x:Name="ConcertRadioButtons" Grid.Row="0" Header="Επιλογή Συναυλίας:" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" SelectionChanged="ConcertRadioButtons_SelectionChanged" Height="110" Margin="0,20,0,0">
                                    <x:String>Concert1</x:String>
                                    <x:String>Concert2</x:String>
                                </RadioButtons>

                                <TextBlock x:Name="ConcertText" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,25" TextAlignment="Center"  FontSize="20" Width="350" TextWrapping="WrapWholeWords"  />


                                <TextBox x:Name="SeatCodeText" Header="Πληκτρολογήστε τον αριθμό θέσεων που επιθυμείτε:" Grid.Row="2"  PlaceholderText="Κωδικός Θέσης" HorizontalAlignment="Center" TextAlignment="Center" VerticalAlignment="Bottom" Height="Auto" FontSize="20" Width="300" Margin="0,0,0,20"/>



                                <TextBlock x:Name="ReservationText" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Width="500" TextAlignment="Center" TextWrapping="WrapWholeWords"/>



                                <Button x:Name="SubmitSeat" Content="Κράτηση"  Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" Click="SubmitSeat_Click" FontSize="20" Margin="0,10,0,20"/>



                                <Image Source="/Assets/Cafe/confirm.png" x:Name="SubmitCheckIcon" Grid.Row="5" Visibility="Collapsed" Margin="0,10,0,10"  Width="50" Height="50"/>

                            </Grid>

                        </Border>







                    </Grid>

                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>
